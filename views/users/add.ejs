<!DOCTYPE html>
<html>

<head>
    <%- include ('../../layouts/header.ejs'); %>
</head>

<body>
    <br><br>
    <div style="text-align: center;">
        <h2><%= title %></h2>
    </div>
    <br>
    <form action="/users/add" enctype="multipart/form-data" method="post" name="form1" class="container">
        <div class="form-group">
            <div class="form-group row">
                <label for="name" class="col-2"><strong>Name: </strong> </label>
                <input type="text" class="form-control col-6" name="name" id="name" required>
            </div>
            <div class="form-group row">
                <label for="email" class="col-2"><strong>Email: </strong> </label>
                <input type="text" name="email" class="form-control col-6" id="email" required>
            </div>
            <div class="form-group row">
                <label for="dob" class="col-2"><strong>DOB: </strong></label>
                <input type="text" name="dob" class="form-control col-6 datepicker" id="dob" required readonly>
            </div>
            <div class="form-group row">
                <label for="gender" class="col-2"><strong>Gender: </strong></label>
                <div class="col-8">
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="male" name="gender" value="male">
                        <label for="male" class="custom-control-label">Male</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="female" name="gender" value="female" class="">
                        <label for="female" class="custom-control-label">Female</label>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label for="mobile_no" class="col-2"><strong>Mobile No.: </strong></label>
                <input type="text" name="mobile_no" class="form-control col-6" id="mobile_no" required>
            </div>
            <div class="form-group row">
                <label for="address" class="col-2"><strong>Address: </strong></label>
                <textarea name="address" id="address" class="form-control col-6" rows="6"></textarea>
            </div>
            <div class="form-group row">
                    <label for="image" class="col-2"><strong>Profile Image: </strong></label>
                    <input type="file" name="profile_image" class="form-control col-6" id="image" required>
            </div>
            <input type="submit" class="btn btn-primary" value="Add">
            <a class="btn btn-danger delete" href="/users/">Cancel</a>
        </div>
    </form>
</body>

</html>

<script>
    $('.datepicker').datepicker({
        format: 'dd.mm.yyyy'
    });
</script>