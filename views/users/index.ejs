<!DOCTYPE html>
<html>

<head>
    <%- include ('../../layouts/header.ejs'); %>
</head>

<body>
    <br><br>
    <div>
        <!-- <a href="/users" class="btn btn-primary ml-3">Home</a> -->
        <a href="/users/add" class="btn btn-secondary ml-3">New User</a>
    </div>
    <br>
    <table class="table">
        <!--listing all users-->
        <thead>
            <tr>
                <th scope="col">Sl. No</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">DOB</th>
                <th scope="col">Gender</th>
                <th scope="col">Mobile</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if(data.length){

                for(var i = 0; i< data.length; i++) {%>
                    <tr>
                        <th scope="row"><%= (i+1) %></th>
                        <td><%= data[i].name%></td>
                        <td><%= data[i].email%></td>
                        <td><%= data[i].dob%></td>
                        <td><%= data[i].gender%></td>
                        <td><%= data[i].mobile_number%></td>
                        <td>
                            <a class="btn btn-success edit" href="../users/edit/<%=data[i].id%>">Edit</a>
                            <a class="btn btn-danger delete" onclick="return confirm('Are You sure?')" href="../users/delete/<%=data[i].id%>">Delete</a>
                        </td>
                    </tr>
                <% }
                  
            }  %>
        </tbody>
    </table>
</body>

</html>